<%- include('main') %> 
<script src="/public/js/login.js"></script>
<body>
    <figure class="background background-overlay" style="background-image: url('../public/image/bg.jpg')">
        <section class="bg-black overflow-hidden">

            <div class="py-15 py-xl-20 d-flex flex-column container level-3 min-vh-100">
                <div class="row align-items-center justify-content-center my-auto">
                    <div class="col-md-10 col-lg-8 col-xl-5">

                        <div class="card">
                            <div class="card-header bg-light text-center pb-0">
                                <h5 class="fs-4 mb-1">HỆ THỐNG QUẢN LÍ THIẾT BỊ</h5>
                                <h5>Đăng nhập hệ thống</h5>
                            </div>
                            <div class="card-body bg-white">

                                <form action="#">
                                    <div class="form-floating mb-2">
                                        <input type="text" class="form-control" id="account" placeholder="Account"
                                            >
                                        <label for="account">Nhập tên tài khoản</label>
                                        <span id="tbAcc" style="color: red;font-size: smaller"></span>
                                    </div>
                                    <div class="form-floating mb-2">
                                        <input type="password" class="form-control" id="password" placeholder="Password"
                                            >
                                        <label for="password"> Nhập mật khẩu</label>
                                        <span id="tbPass" style="color: red; font-size: smaller;"></span>
                                    </div>
                                    <div class="d-grid mb-2">
                                        <button type="button" class="btn btn-primary" id="btnDN" >ĐĂNG NHẬP</button>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value=""
                                                    id="defaultCheck1">
                                                <label class="form-check-label small text-secondary"
                                                    for="defaultCheck1">
                                                    Nhớ mật khẩu
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col text-end">
                                            <a href="#" class="underline small">Forgot password?</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer bg-opaque-black inverted text-center">
                                <p class="text-secondary">Don't have an account yet? <a href="#"
                                        class="underline">Register</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </figure>
</body>

</html>